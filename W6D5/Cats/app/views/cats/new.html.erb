<h1>Create a cat</h1>


<form action="<%= cats_url %>" method="post">
  <label for="cat_name">Name: </label>
  <input type="text" id="cat_name" name="cat[name]" value="<%= @cat.name %>">
  <br>
  <input type="radio" id="cat_sex" name="cat[sex]" value="<%= @cat.sex %>">
  <label for="cat_sex">Male </label>
  <input type="radio" id="cat_sex" name="cat[sex]" value="<%= @cat.sex %>">
  <label for="cat_sex">Female </label>
  <br>

  <select name="colors" id="colors">
    <option value="Choose a color" disabled selected>Choose a color</option>
    <option value="White">White</option>
    <option value="Gray">Gray</option>
    <option value="Orange">Orange</option>
    <option value="Black">Black</option>
    <option value="Brown">Brown</option>
  </select>
  <br>

  <label for="cat_birth_date">Select birth date </label>
  <input type="date" id="cat_birth_date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
  <br>

  <label for="cat_description">Description </label>
  <textarea id="cat_description" name="cat[description]" value="<%= @cat.description %>"></textarea>

  <br>
  <input type="submit" value="Create cat">
</form>
