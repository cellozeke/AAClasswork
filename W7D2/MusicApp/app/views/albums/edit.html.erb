<h2>Edit album</h2>

<form action="<%= album_url(@album) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <%= auth_token %>
  <label for="band_name">Band: </label>
  <select name="album[band_id]" id="album_band">
    <% Band.all.each do |band| %>
      <option value="<%= band.id %>" <%= "selected" if @album.band_id = band.id %>><%= band.name %></option>
    <% end %>
  </select>
  <br>

  <label for="album_title">Title: </label>
  <input type="text" name="album[title]" id="album_title" value="<%= @album.title %>">
  <br>

  <label for="album_year">Year: </label>
  <input type="number" step="1" name="album[year]" id="album_year" value="<%= @album.year %>">
  <br>

  <%= flash[:errors] %>
  <label for="album_live">Live: </label>
  <input type="radio" name="album[live]" id="album_live" value="t" <%= "checked" if @album.live %>>
  <label for="album_studio">Studio: </label>
  <input type="radio" name="album[live]" id="album_studio" value="f" <%= "checked" unless @album.live %>>
  <br>

  <input type="submit" value="Edit album">
</form>
